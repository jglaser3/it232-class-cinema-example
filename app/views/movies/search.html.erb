<%= form_tag search_movies_path, :method => 'get' do %>
<p>
<%= label_tag :search_text %>
<%= text_field_tag :search_text, params[:search_text] %>
</p>
<p>
<%= submit_tag 'Search' %>
</p>
<% end %>

<% if @movies %>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Seen</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= movie.seen %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<% end %>
